.SUFFIXES:
	 .cpp

%.o:%.cpp
	$(CXX) $(CPPFLAGS) $(NDPIINC) -g -c $^ 


.PHONY:
	all clean


all: $(APPNAME)
	
 
$(APPNAME): $(APP_OBJS) 
	$(CXX) -g main.cpp  -o $@ $(CPPFLAGS) $(NDPIINC) $(LIBPATH) $(LIBFLAGS)  $(APP_OBJS) $(NDPILIB) 
	
clean:
	-rm -f *.o  $(APPNAME)

